<% if @user.errors.any? %>
	<p><%= "#{pluralize(@user.errors.count, "error")} prevented the record from being saved :" %></p>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @user do |f| %>
	<%= f.label :username %>
	<%= f.text_field :username, value: 'Username' %><br/>
	<%= f.label :email %>
	<%= f.text_field :email, placeholder: 'email@example.com' %><br/>
	<%= f.label :password %>
	<%= f.password_field :password %><br/>
	<%= f.submit %>
<% end %>
